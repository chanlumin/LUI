 //IE默认的盒模型 外部元素无法被撑开
.lui-col
  float left
  box-sizing border-box

//24个栅格 每个栅格宽度是1/24份如果是offset的话 margin-left也是1/24
for co in (1..24)
  .lui-col-{co}
    width (co/24*100%)
  .lui-col-offset-{co}
    margin-left (co/24*100%)
