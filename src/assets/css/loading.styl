@import "./common/var.styl"

@keyframes lui-rotate
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)

@keyframes lui-circular
  0%
    stroke-dasharray 1,200
    stroke-dashoffset 0
  50%
    stroke-dasharray 90,150
    stroke-dashoffset -40
  100%
    stroke-dasharray 90 150
    stroke-dashoffset  -120
.lui-loading
  width 30px
  height 30px
  z-index 0
  line-height 0
  position relative
  vertical-align  middle
  &__spinner
    z-index: -1
    width 100%
    height 100%
    position relative
    display inline-block
    box-sizing border-box
    animation lui-rotate 0.8s linear infinite
    &__circular
      animation-duration 2s
    // 菊花样式
    &--spinner
      animation-timing-function steps(12)
      i
        top 0
        left 0
        width 100%
        height 100%
        position absolute
        &::before
          width 2px
          height 25px
          content ' '
          display block
          margin 0 auto
          border-radius 40%
          background-color $gray-dark
  &__circular
    width 100%
    height 100%
    circle
      stroke-width 3
      stroke-linecap round
      animation lui-circular 1.5s ease-in-out infinite
  &--black
    .lui-loading__spinner--spinner
      color $gray
    circle
      stroke $gray
  &--white
    //background-color #fff
    .lui-loading__spinner--spinner
      color $fff
      i
        &::before
          background-color #fff
    circle
      stroke $white
for index in (1..12)
  .lui-loading__spinner--spinner i:nth-of-type({index})
    //top (index)px
    opacity (1-(0.75/12)*((index)-1))
    transform rotate(index * 30deg)




