@import "common/var.styl"

.lui-progress
  height 4px
  position relative
  border-radius 4px
  background: $gray-light
  &__portion // 此处是比例的CSS
    left 0
    height 100%
    position absolute
    border-right inherit
    &--width--pivot
      border-top-right-radius 0
      border-bottom-right-radius 0
  &__pivot
    top 50%
    right 0
    min-width 2em
    padding 0 5px
    font-size 10px
    position absolute
    line-height 1.6
    text-align center
    border-radius 1em
    word-break keep-all
    box-sizing borde-box
    background-color $gray-light
    transform translate(100%, -50%)


