@import "common/var.styl"


.lui-slider
  position relative
  border-radius 999px // 不管设置高度是多少 它的左右border都能是圆角的
  background-color $gray-light
  &__bar // currentValue当前移动了多少值
    position relative
    border-radius inherit
    background $blue
  &__button
    position absolute
    top 50%
    right 0
    width 20px
    height 20px
    border-radius 50%
    background-color $white
    transform translate3d(50%,-50%, 0)
    box-shadow 0 1px 2px rgba(0,0,0,0.5)
    &::after
      content ''
      position absolute
      width 200%
      height 200%
      top -50%
      left -50%
  &--disabled
    opacity .3

