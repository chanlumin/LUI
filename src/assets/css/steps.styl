@import "common/var.styl"

.lui-steps
  overflow hidden
  background-color $white
  &--horizontal
    padding 0 10px
    .lui-steps__items // 包裹每个步骤的容器
      display flex
      margin 0 0 10px // 此处的margin的意思是 上友下
      overflow hidden
      position relative
      padding-bottom 22px
      &.van-steps__item-alone
        padding-top 10px
  &--vertical
    padding 0 0 0 35px
  &__icon // status 上面的内容
    float left
    margin-right 10px
  .lui-icon // 打勾的内容
    font-size 40px
  &__message
    height 40px
    margin 15px 0
  &__title
    font-size 14px
    color $text-color
    padding-top 4px
  &__desc
    font-size 12px
    line-height 1.5
    color $gray-dark
.lui-step // step项目
  flex 1
  font-size 14px
  position relative
  color $gray-dark
  &--horizontal
    &:first-child
      .lui-step__title
        transform none
        margin-left 0
    &:last-child
      position absolute
      right 10px
      width auto
      .lui-step__title
        transform none
        margin-left 0
      .lui-step__circle-container
        left auto
        right -9px
      .lui-step__line
        width 0  // 最后的一个line是没有的
    .lui-step__circle-container
      position absolute
      top 28px
      left -8px
      padding 0 8px
      background-color $white
      z-index 1
    .lui-step__title
      font-size 12px
      transform translate3d(-50%, 0, 0)
      display inline-block
      margin-left 3px
    .lui-step__line
      position absolute
      left 0px
      top 30px
      width 100%
      height 1px
      background-color $gray-light
    &.lui-step--finish
      color $text-color
      .lui-step__circle, .lui-step__line
        background-color $green
    &.lui-step--process
      color $text-color
      .lui-step__circle-container
        top 24px
      .lui-icon
        font-size 12px
        color $green
        display block
    .lui-step__circle
      display block
      width 5px
      height 5px
      background-color #888
      border-radius 50%
  &--vertical
    float none
    display block
    font-size 14px
    line-height 18px
    padding 10px 10px 10px 0
    &:not(:last-child)::after
      border-bottom-width 1px
    &:first-child
      &::before
        content: ''
        position absolute
        width 1px
        height 20px
        background-color $white
        top 0
        left -15px
        z-index 1
    .lui-step__circle-container > i
      position absolute
      z-index 2
    .lui-icon-checked
      top 12px
      left -20px
      line-height 12px
      font-size 12px
    .lui-step__circle
      top 16px
      left -17px
    .lui-step__line
      position absolute
      top 0
      left -15px
      width 1px
      height 100%
      background-color $gray-light





